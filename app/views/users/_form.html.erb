<div class="text-field form-group ">
  <h4><%= form.label :email %>:</h4>
  <%= form.text_field :email, type: 'email', :class => "form-control", :placeholder => "Email", :required => true %>
</div>

<div class="password-field form-group">
  <h4><%= form.label :password %>:</h4>
  <%= form.password_field :password, :class => "form-control", :placeholder => "Password", :required => true %>
</div>
