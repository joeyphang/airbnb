<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
</head>
<body>

  <ul class="nav bg-dark d-flex justify-content-around">
    <li class="nav-item1" >
      <% if signed_in? -%>
      <%= button_to t(".sign_out"), sign_out_path, method: :delete, :class => "btn btn-outline-danger btn-sm" %>
      <% else -%>
      <%= link_to t(".sign_in"), sign_in_path %>
      <% end -%>
    </li>

    <li class="nav-item">
      <a class="nav-link disabled" href="/">Home</a>
    </li>

    <li class="nav-item">
      <a class="nav-link disabled" href="/listings">Listings</a>
    </li>

    <li class="nav-item">

      <a class="nav-link disabled" href="/users/<%= current_user.id %>">Profile</a>
    </li>

    <li class="nav-item2">
      <% if signed_in? -%>
<!--       <#%= current_user.email %> : 
 -->      <%= current_user.role %>
      <% else -%>
      <%= link_to t(".sign_in"), sign_in_path %>
      <% end -%>
    </li>

  </ul>

    <div id="flash">
      <% flash.each do |key, value| -%>
      <div id="flash_<%= key %>"><%=h value %></div>
      <% end %>
    </div>



  <%= yield %>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>


</body>
</html>
