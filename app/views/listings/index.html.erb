<div class="row text-center">

<% @listing.order(:country).each_with_index do |list, index| %>

	<div class="col-sm-4">
		<div class="card my-3">
			<div class="card-header">

				<%if list.avatar != nil %>
					<img style="width: auto; height: auto;" src=<%= list.avatar[0]%> />
				<% else %>
					<img style="width: auto; height: auto;" src="https://www.nato-pa.int/sites/default/files/default_images/default-image.jpg"/>

				<% end %>

			</div>
			<div class="card-body">
				<p>
					Country: <%= list.country %> </br>
					Price: <%= list.price %> </br>
					Description: <%= list.description %>
				</p>
				
			</div>

			<div class="card-footer bg-light"> <a href="listings/<%= list.id %>">Details</a> | <a href="listings/<%= list.id%>/edit ">Update</a> </div>
		</div>
		
	</div>

<% end %>

</div>

<%= paginate @listing %>